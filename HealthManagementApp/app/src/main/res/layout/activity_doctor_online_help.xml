<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.doctorUI.DoctorOnlineHelp">

    <TextView
        android:id="@+id/PatientOnlineHelp_tvChatHistoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/OnlineHelp_tvChatHistory"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/PatientOnlineHelp_tvYourMessageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/OnlineHelp_tvYourMessage"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PatientOnlineHelp_tvChatHistory" />

    <Button
        android:id="@+id/PatientOnlineHelp_btnSendMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:enabled="false"
        android:text="@string/OnlineHelp_btnSendMessage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/PatientOnlineHelp_tvChatHistory"
        android:layout_width="395dp"
        android:layout_height="340dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/listbox"
        android:padding="10sp"
        android:scrollbars="vertical"
        android:textColor="#18957C"
        android:textColorHint="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PatientOnlineHelp_tvChatHistoryTitle" />

    <EditText
        android:id="@+id/PatientOnlineHelp_etYourMessage"
        android:layout_width="391dp"
        android:layout_height="117dp"
        android:layout_marginTop="10dp"
        android:autofillHints=""
        android:background="@drawable/box"
        android:ems="10"
        android:inputType="textMultiLine"
        android:padding="10sp"
        android:textColor="#18957C"
        android:textColorHint="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/PatientOnlineHelp_tvYourMessageTitle"
        app:layout_constraintTop_toBottomOf="@+id/PatientOnlineHelp_tvYourMessageTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>